<div id="container">
	<div id="body">
		<h1>Welcome to DataWay!</h1>	
    
	    	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	    	<table id="outer_table">
               	  <tr>
                    <td><table id="inner_table"> 
                    	<tr><td colspan="3"><h3>Log in:</h3></td></tr>
                    	<tr>
				<td><%= f.label :email %></td>
				<td colspan="2"><%= f.email_field :email, :html => {:class=>"text_input"} %></td>
                    	</tr>
                    	<tr>
				<td><%= f.label :password %></td>
				<td colspan="2"><%= f.password_field :password, :html => {:class=>"text_input"} %></td>
                    	</tr>
			<tr>
				<td></td>
				<td colspan="2"><%= f.check_box :remember_me %> <%= f.label :remember_me %></td></tr>
			<tr>
				<td></td><td></td>
				<td><%= f.submit "Log in", :html => {:class=>"button_input right_align"} %></td>
		    	</tr>
			<tr>
				<td><%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
						<%= link_to "Forgot your password?", new_password_path(resource_name)%> 
				    <% end -%>
				</td>
				<td> <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
					<%= link_to "Sign up", new_registration_path(resource_name) %>
				     <% end -%>
				</td>
			</tr>
		     	
                 	</table></td>
                 </tr>
        	</table>
		<% end %>
	</div>




